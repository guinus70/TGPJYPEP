<div class="jumbotron jumbotron-fluid text-center">
  <h1 class="display-4 pt-5 font-weight-bold text-center">Bienvenue sur The Gossip Project</h1>
  <%= link_to "Partagez votre gossip", new_gossip_path , class: "btn btn-danger btn-sm m-3" %>
</div>

<div class="col-12 text-center">
  <% @gossips.each do |gossip| %>
    <div class="card">
      <div class="card-body">
        <h5 class="mt-0 text-center"><%= gossip.title  %></h5>
        <p class="card-text text-center"> Un gossip de : <%= link_to gossip.user.first_name , user_path(:id => gossip.user.id)%></p>
        <p>Ce gossip cumule <%= Comment.all.count {|comment| comment.gossip_id == gossip.id} %> commentaire(s)</p>
        <%= link_to "Afficher ce gossip", gossip_path(:id => gossip.id), class: 'btn btn-outline-danger btn-sm' %>
      </div>
    </div>
  <% end %>
</div>